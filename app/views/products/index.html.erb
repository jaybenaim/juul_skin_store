<h1> Generated Words </h1> 

<a href="/">Back</a> 

<main> 
    <table> 
        <tr> 
            <th>Title</th> 
            <th>Text</th>
            <th></th> 
        </tr> 

        <% @products.each do |product| %> 
            <tr> 
                <td> <%= product.title %> </td> 
                <td> <%= product.text %> </td> 
                <td> <%= link_to 'Show', product_path(product) %> </td> 
            </tr> 
            <% end %> 
    </table> 
</main> 

